prefix_rule(pattern=["git", "push", "-u", "origin", "main"], decision="allow")
prefix_rule(pattern=["git", "fetch", "--all", "--prune"], decision="allow")
prefix_rule(pattern=["/bin/bash", "-lc", "git ls-remote --heads origin | rg -n \"refs/heads/[0-9]+-project-scaffold$\""], decision="allow")
prefix_rule(pattern=["uv", "sync"], decision="allow")
prefix_rule(pattern=["/bin/bash", "-lc", "git ls-remote --heads origin | rg -n \"refs/heads/[0-9]+-stt-api$\""], decision="allow")
prefix_rule(pattern=["git", "push", "-u", "origin", "001-stt-api"], decision="allow")
prefix_rule(pattern=["/bin/bash", "-lc", "gh pr create --base main --head 001-stt-api --title \"feat: add STT API scaffold\" --body \"## Summary\n- add STT API spec/plan/contracts/quickstart\n- add FastAPI STT endpoints (file + WebSocket), schemas, and services\n- add tests for file/stream/health/error paths\n- update README and .gitignore\n\n## Testing\n- not run (recommended: `cd backend && uv run ruff check . && uv run pytest`)\""], decision="allow")
prefix_rule(pattern=["gh", "pr", "view", "1", "--comments", "--json", "comments"], decision="allow")
prefix_rule(pattern=["/bin/bash", "-lc", "git ls-remote --heads origin | rg -n \"refs/heads/[0-9]+-llm-service$\""], decision="allow")
prefix_rule(pattern=["uv", "run", "ruff", "check", "."], decision="allow")
prefix_rule(pattern=["uv", "run", "pytest"], decision="allow")
prefix_rule(pattern=["uv", "run", "--with", "ruff", "ruff", "check", "."], decision="allow")
prefix_rule(pattern=["uv", "run", "--with", "pytest", "pytest"], decision="allow")
prefix_rule(pattern=["git", "push", "-u", "origin", "001-llm-service"], decision="allow")
prefix_rule(pattern=["/bin/bash", "-lc", "gh pr create --base main --head 001-llm-service --title \"feat: add llm service and fix stt errors\" --body \"## Summary\n- add LLM service spec/plan/contracts/quickstart\n- implement LLM completion endpoint and client wrapper\n- add LLM tests and structured validation errors\n- fix STT error handling and form parsing; add multipart dependency\n\n## Testing\n- uv run --with ruff ruff check .\n- uv run --with pytest pytest\""], decision="allow")
prefix_rule(pattern=["git", "pull", "--ff-only"], decision="allow")
